<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<properties>
		<property name="LOG_HOME">.</property>
		<property name="LOG_Layout">[%d{HH:mm:ss:SSS}] [%t] %c{1}:%L - %m%n</property>
	</properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>

		<RollingFile name="RollingFileInfo"
			fileName="${sys:LOG_HOME}/application.log" filePattern="${sys:LOG_HOME}/application.log-%d{yyyy-MM-dd}">
			<!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch） -->
			<ThresholdFilter level="info" onMatch="ACCEPT"
				onMismatch="DENY" />
			<PatternLayout pattern="${sys:LOG_Layout}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="1000 MB" />
			</Policies>
		</RollingFile>

		<RollingFile name="RollingFileError"
			fileName="${sys:LOG_HOME}/application.log.wf" filePattern="${sys:LOG_HOME}/application.log.wf-%d{yyyy-MM-dd}">
			<!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch） -->
			<ThresholdFilter level="warn" onMatch="ACCEPT"
				onMismatch="DENY" />
			<PatternLayout pattern="${sys:LOG_Layout}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="1000 MB" />
			</Policies>
		</RollingFile>

		<RollingFile name="RollingQueueFileInfo"
					 fileName="${sys:LOG_HOME}/queue.log" filePattern="${sys:LOG_HOME}/queue.log-%d{yyyy-MM-dd}">
			<!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch） -->
			<ThresholdFilter level="info" onMatch="ACCEPT"
							 onMismatch="DENY" />
			<PatternLayout pattern="${sys:LOG_Layout}" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="1000 MB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<AsyncRoot level="info"  includeLocation="true">
			<appender-ref ref="Console" />
			<appender-ref ref="RollingFileInfo" />
			<appender-ref ref="RollingFileError" />
		</AsyncRoot>
		<AsyncLogger name="queue" level="info" additivity="false" includeLocation="true">
			<AppenderRef ref="Console" />
			<AppenderRef ref="RollingQueueFileInfo" />
		</AsyncLogger>
	</Loggers>
</Configuration>